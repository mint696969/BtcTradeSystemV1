def _norm_hex(c: str, fallback: str) -> str:
    """#RRGGBB ã«æ­£è¦åŒ–ï¼ˆå¤±æ•—æ™‚ã¯ fallbackï¼‰"""
    if isinstance(c, str):
        c = c.strip()
        if len(c) == 7 and c.startswith("#"):
            try:
                int(c[1:], 16)
                return c.upper()
            except Exception:
                pass
    return fallback

